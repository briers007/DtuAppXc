<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ItemViewBase="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="vertical">

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_location_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="点位名称" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_dtu_vendor"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="生产厂家" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_dtu_model"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="数采仪型号" />

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_dtu_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="数采仪名称" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinnerAddress
                android:id="@+id/item_dtu_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="所在地域" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_dtu_org_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="机构名称" />

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_address_detail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="false"
                ItemViewBase:title="详细地址" />

            <com.minorfish.dtuapp.module.widget.ItemViewEtBtn
                android:id="@+id/item_dtu_mac"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="MAC地址" />

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_dtu_mac_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="false"
                ItemViewBase:title="其他MAC地址" />

            <com.minorfish.dtuapp.module.widget.ItemViewEtBtn
                android:id="@+id/item_dtu_ip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="false"
                ItemViewBase:title="IP地址" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="160dp"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/btn_blue_selector"
            android:text="完  成"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>