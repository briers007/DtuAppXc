<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.minorfish.dtuapp.module.rv.RvRealDataMulti
        android:id="@+id/rv_real_data_multi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/real_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@id/rb_real_1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_real_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/rb_bg_selector"
                android:gravity="center"
                android:text="监测站一"
                android:textColor="@color/radio_btn_text"
                android:textSize="19sp" />

            <RadioButton
                android:id="@+id/rb_real_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/rb_bg_selector"
                android:gravity="center"
                android:text="监测站二"
                android:textColor="@color/radio_btn_text"
                android:textSize="19sp"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/rb_real_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/rb_bg_selector"
                android:gravity="center"
                android:text="放射"
                android:textColor="@color/radio_btn_text"
                android:textSize="19sp"
                android:visibility="gone"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>