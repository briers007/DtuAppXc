<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_bg"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/color_table_top_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="选择日期"
            android:textSize="15sp"
            android:textColor="@color/color_a3a8b6" />

        <RelativeLayout
            android:id="@+id/start_layout"
            android:layout_width="138dp"
            android:layout_height="34dp"
            android:background="@drawable/hitsory_date_bg">

            <TextView
                android:id="@+id/his_date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="2018.07.06"
                android:textSize="15sp"
                android:textColor="@color/color_a3a8b6" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/end_layout"
            android:layout_width="138dp"
            android:layout_height="34dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/hitsory_date_bg">

            <TextView
                android:id="@+id/his_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="2018.07.06"
                android:textColor="@color/color_a3a8b6" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <include
        android:id="@+id/swim_head"
        layout="@layout/history_swim_head_changzhou"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.minorfish.dtuapp.module.rv.RvHistoryChangzhou
            android:id="@+id/rv_history_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_table_top_bg"
        android:gravity="center_vertical"
        android:paddingRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/history_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="@color/color_a3a8b6" />

        <TextView
            android:id="@+id/history_pre"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@drawable/btn_history_selector"
            android:textSize="14sp"
            android:text="前一页"
            android:textColor="@color/color_a3a8b6" />

        <LinearLayout
            android:id="@+id/history_current_layout"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="15dp"
            android:background="@drawable/btn_history_selector"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="38dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="当前页"
                android:textColor="@color/color_a3a8b6" />

            <TextView
                android:id="@+id/history_current_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_down"
                android:drawablePadding="12dp"
                android:textSize="14sp"
                android:text="1"
                android:textColor="@color/color_a3a8b6" />

        </LinearLayout>

        <TextView
            android:id="@+id/history_next"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@drawable/btn_history_selector"
            android:textSize="14sp"
            android:text="后一页"
            android:textColor="@color/color_a3a8b6" />
    </LinearLayout>
</LinearLayout>