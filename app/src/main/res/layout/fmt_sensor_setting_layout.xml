<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ItemViewBase="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="vertical">

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_sensor_vendor"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="生产厂家" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_sensor_model"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="传感器型号" />

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_sensor_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="false"
                ItemViewBase:title="传感器名称" />

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_sensor_freq"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="发送频率" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_sensor_port"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="串口号" />

            <com.minorfish.dtuapp.module.widget.ItemViewSpinner
                android:id="@+id/item_sensor_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="监测类型" />

            <com.minorfish.dtuapp.module.widget.ItemViewTv
                android:id="@+id/item_sensor_sub_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="true"
                ItemViewBase:title="监测值" />

            <com.minorfish.dtuapp.module.widget.ItemViewEt
                android:id="@+id/item_sensor_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="4dp"
                ItemViewBase:showDrawable="false"
                ItemViewBase:title="详细地址" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="160dp"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/btn_blue_selector"
            android:text="配    置"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>